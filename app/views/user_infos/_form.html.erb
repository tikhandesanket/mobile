<%#= form_tag "/user_infos" , :id => 'talk-us-form' do |f| %>
    <div class="row personal_info">
      <div class="col-xs-12">
        <div class="normal-body">
          <div>
            <input type="text" class="form-control name" placeholder="Name" name="name">
          </div>
          <div>
            <input type="email" class="form-control email" placeholder="Enter your email" name="email">
          </div>
          <div class="form-group">
             <input type="submit"value="NEXT" class="btn btn-success next" />
          </div>

        </div>
      </div>
    </div>
